name: Booksfeir CI

on: [push]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v5
      - name: Use Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '22.20.0'
      - run: npm ci
      - run: npm run build --if-present
      - run: npm test
